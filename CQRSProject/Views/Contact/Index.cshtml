@{
    ViewData["Title"] = "İletişim";
    Layout = "~/Views/Shared/_BageryLayout.cshtml";
}

<section class="contact-section sec-pad" style="background-image: url(https://azim.commonsupport.com/Bagery/assets/images/background/contact-1.jpg);">
    <div class="auto-container">
        <div class="content-box">
            <br />
            <div class="title">
                <h1>İletişim</h1>
            </div>
            <ul class="bread-crumb clearfix">
                <li><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li>İletişim</li>
            </ul>
        </div>
    </div>


    <div class="auto-container">
        <div class="row clearfix">
            <div class="col-lg-4 col-md-12 col-sm-12 info-column">
                <div class="contact-info">
                    <div class="info-block">
                        <div class="icon-box"><i class="icon-Location"></i></div>
                        <h4>Adresimiz</h4>
                        <p>İstanbul, Türkiye</p>
                    </div>
                    <div class="info-block">
                        <div class="icon-box"><i class="icon-Phone"></i></div>
                        <h4>Telefon</h4>
                        <p><a href="tel:+905551234567">+90 555 123 45 67</a></p>
                    </div>
                    <div class="info-block">
                        <div class="icon-box"><i class="icon-Latter"></i></div>
                        <h4>Email</h4>
                        <p><a href="mailto:info@bagery.com">info@bagery.com</a></p>
                    </div>
                    <div class="info-block">
                        <div class="icon-box"><i class="icon-Watch"></i></div>
                        <h4>Çalışma Saatleri</h4>
                        <p>Pazartesi - Cumartesi: 08:00 - 20:00</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-12 col-sm-12 form-column">
                <div class="form-inner">
                    <div class="sec-title">
                        <p>Bize Ulaşın</p>
                        <h2>Mesaj Gönderin</h2>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form method="post" asp-controller="Contact" asp-action="Index" class="default-form">
                        @Html.AntiForgeryToken()
                        <div class="row clearfix">
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                <input type="text" name="Name" placeholder="Adınız *" required="">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                <input type="email" name="Email" placeholder="Email Adresiniz *" required="">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                <input type="text" name="Phone" placeholder="Telefon Numaranız">
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 form-group">
                                <input type="text" name="Subject" placeholder="Konu *" required="">
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group">
                                <textarea name="Message" placeholder="Mesajınız *" required=""></textarea>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 form-group message-btn">
                                <button type="submit" class="theme-btn-one">Gönder</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="map-section">
    <div class="map-inner">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d385396.3021839877!2d28.731993724657058!3d41.00498228905982!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cac65f07db028f%3A0x7e49f56b3cc81adb!2s%C4%B0stanbul%2C%20T%C3%BCrkiye!5e0!3m2!1str!2s!4v1642424424221!5m2!1str!2s" 
                width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
</section>
