@model List<GetCategoriesQueryResult>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center px-3">
                    <h6 class="text-white text-capitalize ps-3 mb-0">Kategoriler</h6>
                    <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-sm btn-white mb-0">
                        <i class="material-icons text-sm">add</i> Yeni Kategori
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kategori Adı</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 0; }
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td><div class="d-flex px-2 py-1"><span class="text-secondary text-xs font-weight-bold">@count</span></div></td>
                                    <td><p class="text-xs font-weight-bold mb-0">@item.Name</p></td>
                                    <td class="align-middle text-center">
                                        <a asp-controller="Category" asp-action="UpdateCategory" asp-route-id="@item.Id" class="btn btn-sm btn-info mb-0"><i class="material-icons text-sm">edit</i></a>
                                        <a asp-controller="Category" asp-action="RemoveCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-0" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="material-icons text-sm">delete</i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>