@model GetCategoriesByIdQueryResult
@{
    ViewData["Title"] = "Kategori Güncelle";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Kategori Güncelle</h6>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Category" asp-action="UpdateCategory" method="post">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="input-group input-group-outline my-3 is-filled">
                        <label class="form-label">Kategori Adı</label>
                        <input type="text" name="Name" class="form-control" value="@Model.Name" required>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                        <button type="submit" class="btn bg-gradient-primary">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>