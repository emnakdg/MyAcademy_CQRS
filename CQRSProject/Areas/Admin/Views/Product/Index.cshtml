@model List<GetProductsQueryResult>
@{
    ViewData["Title"] = "Ürünler";
}

<div class="row">
    <div class="col-12">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between align-items-center px-3">
                    <h6 class="text-white text-capitalize ps-3 mb-0">Ürünler</h6>
                    <a asp-controller="Product" asp-action="CreateProduct" class="btn btn-sm btn-white mb-0">
                        <i class="material-icons text-sm">add</i> Yeni Ürün
                    </a>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">#</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Görsel</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Ürün Adı</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Fiyat</th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Kategori</th>
                                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int count = 0; }
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td><div class="d-flex px-2 py-1"><span class="text-secondary text-xs font-weight-bold">@count</span></div></td>
                                    <td><img src="@item.ImageUrl" class="avatar avatar-sm me-3 border-radius-lg" alt="@item.Name"></td>
                                    <td><p class="text-xs font-weight-bold mb-0">@item.Name</p></td>
                                    <td><p class="text-xs font-weight-bold mb-0">@item.Price.ToString("C")</p></td>
                                    <td><span class="badge badge-sm bg-gradient-success">@item.Category.Name</span></td>
                                    <td class="align-middle text-center">
                                        <a asp-controller="Product" asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-sm btn-info mb-0"><i class="material-icons text-sm">edit</i></a>
                                        <a asp-controller="Product" asp-action="RemoveProduct" asp-route-id="@item.Id" class="btn btn-sm btn-danger mb-0" onclick="return confirm('Silmek istediğinize emin misiniz?')"><i class="material-icons text-sm">delete</i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
