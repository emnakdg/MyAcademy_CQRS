@{
    ViewData["Title"] = "Yeni Ürün";
}

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Yeni Ürün Ekle</h6>
                </div>
            </div>
            <div class="card-body">
                <form asp-controller="Product" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Ürün Adı</label>
                        <input type="text" name="Name" class="form-control" required>
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Fiyat</label>
                        <input type="number" step="0.01" name="Price" class="form-control" required>
                    </div>
                    <div class="my-3">
                        <label class="form-label ms-0">Görsel (Dosya)</label>
                        <input type="file" name="ImageFile" class="form-control border p-2" required>
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <select name="CategoryId" class="form-control" required>
                            <option value="">Kategori Seçin</option>
                            @foreach (var cat in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.categories)
                            {
                                <option value="@cat.Value">@cat.Text</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                        <button type="submit" class="btn bg-gradient-primary">Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
