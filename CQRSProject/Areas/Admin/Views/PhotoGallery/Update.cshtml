@model CQRSProject.CQRSPattern.Results.PhotoGalleryResults.PhotoGalleryResult
@{ ViewData["Title"] = "Fotoğraf Güncelle"; }

<div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <h6 class="text-white text-capitalize ps-3">Fotoğraf Güncelle</h6>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div class="input-group input-group-outline my-3 is-filled"><label class="form-label">Başlık</label><input type="text" name="Title" class="form-control" value="@Model.Title" required></div>
                    <input type="hidden" name="ImageUrl" value="@Model.ImageUrl" />
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Mevcut Görsel:</label>
                        <img src="@Model.ImageUrl" width="100" style="margin-left: 10px;" />
                    </div>
                    <div class="my-3">
                        <label class="form-label ms-0">Görsel Değiştir (Dosya)</label>
                        <input type="file" name="ImageFile" class="form-control border p-2">
                    </div>
                    <div class="input-group input-group-outline my-3">
                        <select name="CategoryId" class="form-control" required>
                            @foreach (var cat in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Categories)
                            {
                                <option value="@cat.Value" selected="@(cat.Value == Model.CategoryId.ToString())">@cat.Text</option>
                            }
                        </select>
                    </div>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">Geri Dön</a>
                        <button type="submit" class="btn bg-gradient-primary">Güncelle</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
